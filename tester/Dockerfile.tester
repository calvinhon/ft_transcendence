# Tester container with all necessary tools
FROM alpine:latest

# Install all testing dependencies
RUN apk add --no-cache \
    bash \
    curl \
    jq \
    grep \
    sed \
    findutils \
    coreutils \
    docker-cli

WORKDIR /tests

# Copy test scripts
COPY *.sh ./

# Make all scripts executable
RUN chmod +x *.sh

CMD ["/bin/bash"]
