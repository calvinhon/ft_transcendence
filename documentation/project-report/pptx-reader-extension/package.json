{
  "name": "pptx-reader",
  "displayName": "PPTX Reader",
  "description": "Integrated PPTX presentation reader and viewer for VS Code",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Viewers",
    "Other"
  ],
  "activationEvents": [
    "onCommand:pptx-reader.openReader",
    "onLanguage:plaintext"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "pptx-reader.openReader",
        "title": "Open PPTX Reader",
        "category": "PPTX"
      },
      {
        "command": "pptx-reader.openFile",
        "title": "Open PPTX File",
        "category": "PPTX"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "pptx-reader.openFile",
          "when": "resourceExtname == .pptx",
          "group": "1_modification"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.90.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {}
}
